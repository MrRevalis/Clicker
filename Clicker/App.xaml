<Application x:Class="Clicker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Clicker"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/Colors.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Style/Fonts.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Style/Buttons.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Style/Texts.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Style/ListViewStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>

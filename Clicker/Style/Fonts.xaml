<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Clicker.Style"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    >

    <FontFamily x:Key="PlayfairRegular">pack://aplication;,,,/Fonts/#Playfair Display Regular</FontFamily>
    <FontFamily x:Key="PlayfairBold">pack://aplication;,,,/Fonts/#Playfair Display Bold</FontFamily>
    <FontFamily x:Key="PlayfairItalic">pack://aplication;,,,/Fonts/#Playfair Display Italic</FontFamily>
    <FontFamily x:Key="PlayfairMedium">pack://aplication;,,,/Fonts/#Playfair Display Medium</FontFamily>

    <Style TargetType="{x:Type TextBlock}" x:Key="TextBlockFont">
        <Setter Property="FontFamily" Value="{StaticResource PlayfairRegular}"></Setter>
    </Style>
    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockFont}"></Style>

    <system:Double x:Key="FontSizeExtraSmall">7</system:Double>
    <system:Double x:Key="FontSizeSmall">10</system:Double>
    <system:Double x:Key="FontSizeNormal">15</system:Double>
    <system:Double x:Key="FontSizeLarge">20</system:Double>
</ResourceDictionary>